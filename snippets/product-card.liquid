
<div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-1000 ease-in-out hover:scale-105 transform overflow-hidden group">
    <!-- Product Image -->
    <div class="relative overflow-hidden aspect-square ">
      <a href="{{ product.url }}" class="block">
        {% if product.featured_image %}
          <img 
            src="{{ product.featured_image | img_url: '400x400', crop: 'center' }}" 
            alt="{{ product.title | escape }}"
            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            loading="lazy"
            width="400"
            height="400"
          >
        {% else %}
          {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover' 	}}
        {% endif %}
        
        <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-20 transition-all duration-300 flex items-center justify-center">
          <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <span class="bg-white text-gray-900 px-4 py-2 rounded-full text-sm font-medium shadow-lg">
              View Product
            </span>
          </div>
        </div>
      </a>
    </div>

    <div class="p-4">
      {% if product.vendor != blank %}
        <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">{{ product.vendor }}</p>
      {% endif %}

      <h3 class="font-semibold text-gray-900 mb-2 line-clamp-2">
        <a href="{{ product.url }}" class="hover:text-blue-600 transition-colors duration-200">
          {{ product.title }}
        </a>
      </h3>

      <div class="flex items-center justify-between mb-3">
        <div class="flex items-center space-x-2">
          {% if product.compare_at_price > product.price %}
            <span class="text-lg font-bold text-gray-900">{{ product.price | money }}</span>
            <span class="text-sm text-gray-500 line-through">{{ product.compare_at_price | money }}</span>
            <span class="bg-red-100 text-red-800 text-xs px-2 py-1 rounded-full font-medium">
              Save {{ product.compare_at_price | minus: product.price | money }}
            </span>
          {% else %}
            <span class="text-lg font-bold text-gray-900">{{ product.price | money }}</span>
          {% endif %}
        </div>
      </div>

      {% if product.description != blank %}
        <p class="text-sm text-gray-600 line-clamp-2 mb-4">
          {{ product.description | strip_html | truncate: 80 }}
        </p>
      {% endif %}

      <form action="/cart/add" method="post" class="space-y-2">
        <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
        <button 
          type="submit" 
          class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition-colors duration-200 flex items-center justify-center space-x-2"
          {% unless product.available %}disabled{% endunless %}
        >
          {% if product.available %}
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5m6-5v6a2 2 0 01-2 2H9a2 2 0 01-2-2v-6m6 0V9a2 2 0 00-2-2H9a2 2 0 00-2 2v4.01"></path>
            </svg>
            <span>Add to Cart</span>
          {% else %}
            <span>Out of Stock</span>
          {% endif %}
        </button>
      </form>

      {% if product.tags.size > 0 %}
        <div class="mt-3 flex flex-wrap gap-1">
          {% for tag in product.tags limit: 3 %}
            <span class="bg-gray-100 text-gray-700 text-xs px-2 py-1 rounded-full">{{ tag }}</span>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>